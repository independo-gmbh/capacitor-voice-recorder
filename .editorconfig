# This file is for unifying the coding style of different editors and IDEs.
# editorconfig.org

root = true

# TypeScript, JavaScript, JSON
[{scripts,src}/**.{ts,js,json},*.config.js]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# Swift
[ios/**.{h,swift,pbxproj}]
charset = utf-8
indent_style = tab
tab_width = 8
max_line_length = 2048
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Java
[android/**.{java,xml,gradle}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true